# This build file should give you full auto-completion in any area of the engine.

-cpp out/

-cp src/lib
-cp src/tool/src
-cp tests/unit/src
-cp tests/tool/src
-cp tests/system/src

-D hxcpp
-D linc_imgui
-D linc_opengl
-D linc_directx
-D linc_stb
-D format
-D threads
-D flurry-entry-point=uk.aidanlee.flurry.Flurry

-lib hxcpp
-lib linc_imgui
-lib linc_sdl
-lib linc_opengl
-lib linc_directx
-lib linc_stb
-lib buddy
-lib mockatoo
-lib haxe-concurrent
-lib safety
-lib sys.io.abstractions
-lib format
-lib RxHaxe
-lib hxbit
-lib tink_json
-lib tink_cli
-lib akifox-asynchttp

--macro nullSafety('uk.aidanlee.flurry.modules.differ', Strict)
--macro nullSafety('uk.aidanlee.flurry.api.resources', Strict)
--macro Safety.safeNavigation('', true)

--no-inline

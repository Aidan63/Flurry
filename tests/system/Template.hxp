
class Build extends Project
{
    override function setup()
    {
        app.name      = 'SystemTests';
        app.main      = '{TEST_CASE}';
        app.output    = 'bin';
        app.codepaths = [ 'src', '../../src' ];

        build.profile = Debug;

        build.dependencies = [
            'flurry-snow-host' => null
        ];

        files = [
            'assets' => 'assets'
        ];
    }
}
